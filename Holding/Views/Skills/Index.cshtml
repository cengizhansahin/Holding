@{
    ViewData["Title"] = "Index";
}
@model IEnumerable<Skill>

<h1>Skill Listesi</h1>
<a class="btn btn-outline-primary" asp-controller="Skills" asp-action="Create">Beceri Ekle</a>
<table class="table table-hover table-dark table-striped table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.SkillID)</th>
            <th>@Html.DisplayNameFor(m => m.SkillName)</th>
            <th>@Html.DisplayNameFor(m => m.SkillDescription)</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.SkillID</td>
                <td>@item.SkillName</td>
                <td>@item.SkillDescription</td>
                <td>
                    <div class="btn-group">
                        <a asp-controller="Skills" asp-action="Edit" asp-route-id="@item.SkillID" class="btn btn-sm btn-primary">
                            Edit
                        </a>
                        <a asp-controller="Skills" asp-action="Delete" asp-route-id="@item.SkillID" class="btn btn-sm btn-danger">Sil</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js" integrity="sha512-AA1Bzp5Q0K1KanKKmvN/4d3IRKVlv9PYgwFPvm32nPO6QS8yH1HO7LbgB1pgiOxPtfeg5zEn2ba64MUcqJx6CA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        $(document).ready(function () {
            $('.btn-danger').click(function (e) {
                e.preventDefault(); // Formun doğrudan gönderilmesini engeller

                var skillId = $(this).attr('asp-route-id');

                Swal.fire({
                    title: "Are you sure?",
                    text: "You won't be able to revert this!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes, delete it!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: '/Skills/Delete/' + skillId,
                            type: 'POST',
                            data: { _token: $('input[name="__RequestVerificationToken"]').val() }, // AntiForgeryToken ekle
                            success: function (response) {
                                Swal.fire({
                                    title: "Deleted!",
                                    text: "Your file has been deleted.",
                                    icon: "success"
                                });
                                window.location.reload(); // Sayfayı yeniden yükler
                            },
                            error: function (error) {
                                Swal.fire({
                                    title: "Hata!",
                                    text: "Bir hata oluştu. Lütfen tekrar deneyin.",
                                    icon: "error"
                                });
                            }
                        });
                    }
                });
            });
        });
                                        }
    </script>
}
